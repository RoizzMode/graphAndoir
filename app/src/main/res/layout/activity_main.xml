<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:background="@color/colorPrimary">
    <Button
            android:text="@string/go_to_operations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/go_to_operations"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_of_new_vertex"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:layout_width="301dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name_of_new_vertex"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/background_light"
            android:hint="@string/name_of_new_vertex"
            tools:ignore="Autofill"
            app:layout_constraintVertical_weight="2"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/add_button"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintTop_toBottomOf="@+id/listOfVertex"
            app:layout_constraintBottom_toTopOf="@+id/go_to_operations"
    />
    <Button
            android:text="@string/add_vertex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_weight="2"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/name_of_new_vertex"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/listOfVertex"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/go_to_operations"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/listOfVertex"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_weight="10"
            android:background="@android:color/background_light"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/name_of_new_vertex"
            android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>