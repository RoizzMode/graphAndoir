<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:background="@color/colorPrimary">
    <Button
            android:text="@string/go_to_operations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/go_to_operations"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_button"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/add_vertex"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/add_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_weight="2"
            android:textSize="12sp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/listOfVertex"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/go_to_operations"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/listOfVertex"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_weight="10"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/add_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>